container_commands:
  00-createWebappIfAbsent:
    command: mkdir -p /home/webapp

files:
  "/etc/cron.d/laravel_cron":
    mode: "000644"
    owner: root
    group: root
    content: |
      # schedular of laravel runs every minute
      * * * * * webapp /usr/bin/php /var/app/current/artisan schedule:run 1>> /dev/null 2>&1
    encoding: plain